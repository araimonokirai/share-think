<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-8">
        <div class="post_wrap">
          <% @posts.each do |post| %>
              <div class="post_block">
                <div class="block-image">
                  <div class="view view-first">
                    <%= link_to post_path(post.id) do %>
                      <%= attachment_image_tag post, :image, size: '100x100' %>
                    <% end %>
                  </div>
                </div>
                <div class="block-content">
                  <h3 class="block-title">
                    <%= link_to post_path(post.id) do %>
                      <%= post.title %>
                    <% end %>
                  </h3>
                  <p><%= post.remark %></p>
                  <%= attachment_image_tag post.user, :profile_image, size: "20x20", fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
                  <ul class="inline-meta">
                    <li>By
                      <%= post.user.name %>
                    </li>
                    <li>
                      <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
                    </li>
                  </ul>
                </div>
              </div>
          <% end %>
        </div>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</section>