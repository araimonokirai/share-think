<div class="row">
   <h2>
      <i class="fa fa-th-list" aria-hidden="true"></i>
        Think
     </h2>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Title</th>
          <th>いいね</th>
          <th></th>
          <th>投稿日</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @posts.each do |post| %>
          <tr id="post_<%= post.id %>">
            <td>
              <%= link_to post_path(post.id) do %>
                <%= attachment_image_tag post, :image, size: '50x50' %>
              <% end %>
            </td>
            <td>
              <%= link_to user_path(post.user) do %>
                <%= post.user.name %>
              <% end %>
            </td>
            <td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
            <td class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></td>
            <td class="comments-count">コメント数: <%= link_to "#{post.post_comments.count}", post_path(post.id) %></td>
            <td class="created-at"> <%= post.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
</div>