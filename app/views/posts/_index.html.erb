<div class="row">
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Think</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr id="post_<%= post.id %>">
        <td>
          <%= link_to user_path(post.user) do %>
            <%= attachment_image_tag post, :image, size:"100x100", fallback: "no-image-icon.jpg" %>
          <% end %>
        </td>
        <td><%= link_to post.title, post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.remark %></td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", post: post %></td>
        <td class="comments-count">コメント数: <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>