<% if post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, remote: true,  class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>